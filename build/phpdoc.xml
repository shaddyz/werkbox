<?xml version="1.0" encoding="UTF-8" ?>
<phpdoc>
    <parser>
        <target>phpdoc</target>
        <extensions>
            <extension>php</extension>
        </extensions>
    </parser>
    <transformer>
        <target>docs</target>
    </transformer>
    <transformations>
        <template name="responsive"/>
        <template name="checkstyle"/>
    </transformations>
    <files>
        <directory>../src</directory>   
    </files>
</phpdoc>

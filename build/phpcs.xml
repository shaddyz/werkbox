<?xml version="1.0"?>
<ruleset name="WerkBox">
    <description>The WerkBox coding standard based off PSR-2 with maximum line length.</description>
    <rule ref="PSR2"/>
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="120"/>
            <property name="absoluteLineLimit" value="120"/>
        </properties>
    </rule>
</ruleset>
